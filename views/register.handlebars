<div class="row">
    <div class="col-md-6 offset-sm-3 text-center">
        <h5 class="card-title text-center" id="register">
            <strong>R E G I S T E R</strong>
        </h5>
        <div class="card card-signin my-5">
            <div class="card-body">
                <form class="form-signin">
                    <div class="form-label-group text-left">
                        <label for="inputEmail">Name</label>
                        <input type="name" id="name" class="form-control" placeholder="Name" required autofocus>
                    </div>
                    <br>
                    <div class="form-label-group text-left">
                        <label for="inputEmail">Email</label>
                        <input type="email" id="email" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <br>
                    <div class="form-label-group text-left">
                        <label for="inputPassword">Password</label>
                        <input type="password" id="password" class="form-control" placeholder="Password" required>
                    </div>
                    <br>
                    <div class="form-label-group text-left">
                        <label for="inputRoll">Role</label>
                        <select class="form-control" id="role" name="role">
                            <option>Employee</option>
                            <option>Hardware Engineer</option>
                            <option>Software Engineer</option>
                            <option>Network Engineer</option>
                        </select>
                    </div>
                    <br>
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" id="submit">Submit</button>

                </form>
            </div>
        </div>
    </div>
</div>